<html
	lang="en"
	class="light-style layout-navbar-fixed layout-menu-fixed"
	dir="ltr"
	data-theme="theme-default"
	data-assets-path="/assets/"
	data-template="vertical-menu-template"
>

	<head>
		<meta charset="utf-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
		/>

		<meta charset="utf-8" />
		<title>{{title}}</title>

		<link
			rel="icon"
			type="image/x-icon"
			href="/assets/img/favicon/favicon.ico"
		/>
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="/assets/vendor/css/rtl/core.css"
			class="template-customizer-core-css"
		/>
		<link
			rel="stylesheet"
			href="/assets/vendor/css/rtl/theme-default.css"
			class="template-customizer-theme-css"
		/>
		<link rel="stylesheet" href="/assets/css/demo.css" />
		<script src="/assets/vendor/js/helpers.js"></script>
		<link rel="stylesheet" href="/assets/vendor/fonts/fontawesome.css" />
		<script src="/assets/js/main.js"></script>
		<script src="/assets/vendor/js/template-customizer.js"></script>
		<script src="/assets/js/config.js"></script>
	</head>

	<body>
		<!-- Content wrapper -->
		<div class="content-wrapper">
			<div class="container">
				<!-- Content -->
				<div class="invoice-print p-5">
					{{!-- <div class="d-flex justify-content-between flex-row">
					<div class="row p-sm-3 p-0">
						<div class="col-md-6 mb-md-0 mb-4">
							<div class="d-flex svg-illustration mb-4 gap-2">
								<span class="app-brand-logo demo">
									<img src="/assets/img/childdr-logo.png"
										width="5%" alt="ChildDR" />
								</span>
								<span class="app-brand-text demo text-body fw-bolder">ChildDr</span>
							</div>
							<p class="mb-1">{{prescription.doctor.physicalPractice}}</p>
							<p class="mb-0">{{prescription.doctor.phone}}</p>
						</div>

						<div class="col-md-6">
							<dl class="row mb-2">
								<dd class="col-sm-6 d-flex justify-content-md-end">
									<div class="w-px-150">
										<span class="fw-semibold">Date:
											{{prescription.updatedAt}}</span>
									</div>
								</dd>
							</dl>
							<dl class="row mb-2">
								<dd class="col-sm-6 d-flex justify-content-md-end">
									<div class="w-px-150">
										<span class="fw-semibold">Prescription ID:
											{{prescription.prescriptionId}}</span>
									</div>
								</dd>
							</dl>
						</div>
					</div>
				</div> --}}
					<div class="d-flex justify-content-between flex-row">
						<div class="mb-4">
							<div class="d-flex svg-illustration mb-3 gap-2">
								<span class="app-brand-logo demo">

									<img
										src="/assets/img/childdr-logo.png"
										width="200px"
										alt="ChildDR"
									/>

								</span>
							</div>
							<div class="w-25">
								<p
									class="mb-1"
								>{{prescription.doctor.physicalPractice}}</p>
								<p
									class="mb-0"
								>{{prescription.doctor.phone}}</p>
							</div>
						</div>
						<div>
							<h4>Prescription</h4>
							<div class="mb-2">
								<span>Date:</span>
								<span
									class="fw-medium"
								>{{prescription.updatedAt}}</span>
							</div>
							<div>
								<span>Prescription-ID:</span>
								<span
									class="fw-medium"
								>{{prescription.prescriptionId}}</span>
							</div>
						</div>
					</div>
					<hr />
					<div class="row d-flex justify-content-between mb-4">
						<hr />
						<h6 class="text-center">APPOINTMENT DETAILS</h6>
						<hr />

						<div class="col-sm-6 w-50">
							<h6>Prescribed to:</h6>
							<table>
								<tbody>
									<tr>
										<td class="pe-3">Patient Name:</td>
										<td
										>{{prescription.patient.fullName}}</td>
									</tr>
									<tr>
										<td class="pe-3">Age/Gender:</td>
										<td
										>{{prescription.patient.age}}/{{prescription.patient.gender}}</td>
									</tr>
									<tr>
										<td class="pe-3">Height:</td>
										<td>{{prescription.patientHeight}}</td>
										
									</tr>
									<tr>
										<td class="pe-3">weight:</td>
										<td>{{prescription.patientWeight}}</td>
									</tr>
									<tr>
										<td class="pe-3">Phone Number:</td>
										<td>{{prescription.patient.phone}}</td>
									</tr>
									<tr>
										<td class="pe-3">Email:</td>
										<td>{{prescription.patient.email}}</td>
									</tr>
									
								</tbody>
							</table>
						</div>
						<div class="col-sm-6 w-50">
							<h6>Prescribed by:</h6>
							<table>
								<tbody>
									<tr>
										<td class="pe-3">Name:</td>
										<td>Dr.
											{{prescription.doctor.firstName}}
											{{prescription.doctor.lastName}}</td>
									</tr>
									<tr>
										<td class="pe-3">Department:</td>
										<td
										>{{prescription.doctor.department}}</td>
									</tr>
									<tr>
										<td class="pe-3">Phone No:</td>
										<td>{{prescription.doctor.phone}}</td>
									</tr>
									<tr>
										<td class="pe-3">Email:</td>
										<td>{{prescription.doctor.email}}</td>
									</tr>
									<tr>
										<td class="pe-3">Doctor Registration Number:</td>
										<td>{{prescription.doctor.doctorRegistrationNumber}}</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="table-responsive">
						<hr />
						<h6 class="text-center">PRESCRIBED MEDICINE</h6>
						<hr />
						<table class="table border-top m-0 mb-4">
							<thead>
								<tr>
									<th><strong>Medicine Name</strong></th>
									<th><strong>Dosage</strong></th>
									<th><strong>Duration</strong></th>
								</tr>
							</thead>
							<tbody>
								{{#each prescription.medicines}}
									<tr>
										<td>{{this.medicineName}}</td>
										<td>{{this.dosage}}</td>
										<td>{{this.duration}}</td>
									</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
					<div class="table-responsive">
						<hr />
						<h6 class="text-center">PROBABLE-DIAGNOSIS</h6>
						<hr />
						<table class="table border-top m-0">
							<thead>
								<tr>
									<th><strong>Section Name</strong></th>
									<th><strong>Section Description</strong></th>
								</tr>
							</thead>
							<tbody>
								{{#each prescription.medicalInfo}}
									<tr>
										<td>{{this.itemDetails}}</td>
										<td>{{this.itemInformation}}</td>
									</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
					<div class="row">
						<div class="col-12 mt-4">
							<span class="fw-semibold">Message:</span>
							<span>{{prescription.prescriptionMsg}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col-12 mt-4">
							<span class="fw-semibold">Note:</span>
							<span>{{prescription.note}}</span>
						</div>
					</div>
				</div>
			</div>
			<!-- / Content -->
			<div class="content-backdrop fade"></div>
		</div>
	</body>

</html>